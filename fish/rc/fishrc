function fish_prompt --description 'Write out the prompt'
	set -l last_status $status

    # User
    set_color red
    echo -n (whoami)
    set_color normal

    echo -n ':'

    # PWD
    echo -n $PWD

    __terlar_git_prompt
    __fish_hg_prompt
    echo

    if not test $last_status -eq 0
        set_color $fish_color_error
    end

    echo -n '> '
    set_color normal
end
